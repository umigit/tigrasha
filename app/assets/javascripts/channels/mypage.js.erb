$(function () {
  $(document).on('ajax:success', '#sightingsLink', function(event) {
    $(".mypage__result").html(event.detail[2].response);
  });

  $(document).on('ajax:success', '#postsLink', function(event) {
    console.log(event.detail);
    $(".mypage__result").html(event.detail[2].response);
  });

  $(document).on('ajax:complete', '.delete', function(event) {
    event.preventDefault();
    /* Act on the event */
    console.log(event.detail[0].response);
    var sighting = JSON.parse(event.detail[0].response);
    var id = sighting.id;
    console.log(id);
    $("#sightingContainer-" + id).css('display', 'none');
    $("#sightingContainer-" + id).val('消えろ');
  });
});
