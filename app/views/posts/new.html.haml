.row.p-1
  .col-lg-5.col-md-6.ml-auto.mr-auto
    %h1.text-center 張り紙
    %hr
    = form_with model: @post do |f|
      .form-group
        = f.label :タイトル
        %br/
        = f.text_field :title, class: "form-control"
      .form-group.hidden
        = f.label :お写真
        %br/
        = f.file_field :image, class: "form-control-file"
      .form-group
        = f.label :お名前
        %br/
        = f.text_field :name, class: "form-control"
      .form-group
        = f.label :"いなくなった場所・最後に見た場所"
        %br/
        = f.text_field :lost_place, class: "form-control"
      .form-group
        = f.label :詳細
        %br/
        = f.text_area :detail, class: "form-control", rows: 6
      .form-group
        = f.submit "張り紙をする", class: "btn btn-primary btn-block btn-lg"
