= render "/layouts/navbar"
.bg-image.bg-wood
  .container.container__main
    .row
      .col-lg-6.col-md-8.mx-auto
        .card.my-3.bg-paper
          .card-body
            %h1.text-center 目撃情報
            %hr
            = form_with model: Sighting.new, id: "sightingForm" do |f|
              .image-box.text-center.mb-2
                = image_tag "cat_default.png", class: "img-thumbnail"
                .image-mask
                  = image_tag "no_image_small.png"
              .form-group.hidden.d-none
                = f.label :写真
                %br/
                = f.file_field :image, class: "form-control-file", id: "imageFile", autofocus: true
              .form-group
                = f.label :"みかけた場所"
                %br/
                = f.text_field :place, class: "form-control", id: "placeField"
              .form-group
                = f.label :詳細
                %br/
                = f.text_area :detail, class: "form-control", rows: 4, id: "detailField"
              .form-group
                = f.label :"地図"
                %br/
                -# = f.label :"address"
                -# = f.text_field :address, class: "form-control", id: "addressField"
                = f.label :"latitude(debug)"
                = f.text_field :latitude, class: "form-control", id: "latitudeField"
                = f.label :"longitude(debug)"
                = f.text_field :longitude, class: "form-control", id: "longitudeField"
                %br/
                %input#search-box.form-control{type: "text"}
              #map.mb-4{"data-location": ""}
              .form-group
                = f.submit "情報提供する", id: "sightingSubmitButton", class: "btn btn-primary btn-block btn-lg", type: "button"
        = render "/posts/trim"
