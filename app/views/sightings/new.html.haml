= render "/layouts/navbar"
.bg-image.bg-wood
  .container.container__main
    .row
      .col-lg-6.col-md-8.mx-auto
        .card.my-3.bg-paper
          .card-body
            %h1.text-center 目撃情報
            %hr
            = form_with model: Sighting.new, local: true do |f|
              .form-group.hidden
                = f.label :写真
                %br/
                = f.file_field :image, class: "form-control-file", id: "imageFile", autofocus: true
              .form-group
                = f.label :"みかけた場所"
                %br/
                = f.text_field :place, class: "form-control"
              .form-group
                = f.label :詳細
                %br/
                = f.text_area :detail, class: "form-control", rows: 4
              .form-group
                = f.label :"地図"
                %br/
                = f.text_field :location, class: "form-control", id: "latitudeField"
                = f.text_field :location, class: "form-control", id: "longitudeField"
                %input#search-box.form-control{type: "text"}
              #map.mb-4{"data-location": ""}
              .form-group
                = f.submit "情報提供する", class: "btn btn-primary btn-block btn-lg", type: "button", onclick: "submit();"
